{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--port=57765",
                "--reload"
            ],
            "env": {
                "ENVIRONMENT": "development"
            },
            "jinja": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "windows": {
                "python": "${workspaceFolder}/.venv/Scripts/python.exe"
            }
        }
    ]
}